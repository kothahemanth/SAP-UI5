<mvc:View
	controllerName="ui5.walkthrough.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Button
		text="{i18n>showHelloButtonText}"
		press=".onShowHello"
	/>
    <Button
		text="Say Helloo"
		press=".onShowHelloo"
	/>
    <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="false"
      width="60%"/>
</mvc:View>
